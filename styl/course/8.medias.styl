@media screen and (min-width 2295px)
	.container
		width 1400px
	#main
		padding 300px 0
	.main-title
		font-size: 80px
		margin 60px 0
	.modal-dialog
		width 900px
	#anna
		left 150px
@media screen and (max-width 1199px)
	#main
		background-position: center top
@media screen and (max-width 991px)
	header
	footer
		padding 15px 0
	#logo
		float: none
		margin 0 auto 5px
		display block
	.contacts
		float: none
		text-align: center
	.contact
		display: inline-block
		margin 5px 5px 0
		line-height: 17px
	#main
		padding 50px 0
	.get-list
		padding-left: 0
		padding-top: 120px
		background-position: center top
		background-size: 120px
	.packet-body
		min-height 401px
	#anna
		top 0
@media screen and (max-width 767px)
	#main
		background-position: left top
		text-align: center
	.main-title
		font-size: 50px
		margin 20px 0 30px
	.button-main
		margin 30px auto 0
	.packet-body
		min-height 1px
	.modal-dialog
		width auto
	#anna
		position static
		width: 320px
		height 320px
		margin:0 auto 25px
	.author-title
		text-align: center
		margin-left: 0
	.author-list
		margin-left: 0
@media screen and (max-width 485px)
	#logo
		width 160px
		height 14px
	.contact
		font-size: 12px
		line-height: 15px
		background-size: 15px
		padding-left: 18px
	.contact.contact-email
		padding-left: 26px
	#main
	#plan
	#prices
	#get
	#author
	#last
		padding 40px 0
	.main-info, .pre
		font-size: 20px
	.main-title
		font-size: 40px
		margin-top: 20px
	.main-info:last-of-type
		margin-top: 15px
	.general-title
		font-size: 26px
		margin-bottom: 30px
	.general-title .span-main::before
		width: 42px;
		height: 42px;
		top: -31px;
		left: -23px;
	.get-list li
		padding-left: 25px
	.lesson-list li, .structure-item-list li
		margin-left: 10px
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 30px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.timer-title
		font-size: 26px
		margin-top: 20px
		line-height: 1.3
	.author-list li
		margin-bottom: 15px
	.last-container
		padding 30px 20px
	.last-subtitle
		margin 20px 0
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
@media screen and (max-width 385px)
	body
	.pre
	.main-info
	.button
		font-size: 18px
	header
	footer
		padding 10px 0
	#main
	#plan
	#prices
	#get
	#author
	#last
		padding 30px 0
	.main-title
		font-size: 30px
	#anna
		width 220px
		height 220px
	.author-title
		margin-bottom: 20px
	.get-list li
		font-size: 20px
	.lesson-list li, .structure-item-list li
		margin-left: 0
	.structure-item
	.packet
		padding 15px
	.modal-title
		font-size: 22px
	.modal-subtitle
		font-size: 20px
		margin 15px 0 10px
	.modal-list li
		margin-left: 5px
	.timer-title
		font-size: 24px
	.prepaymant-title
		font-size: 28px
	.last-container
		padding 20px 15px
	.last-subtitle
		font-size: 20px
		margin 5px 0 10px