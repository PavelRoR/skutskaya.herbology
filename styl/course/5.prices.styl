#prices
	padding 50px 0
	background-color: #FBFAF8
	background-image url(../img/backgrounds/take_part_bg.png)
	background-repeat no-repeat
	background-position: center bottom
	background-size: cover
.packets
	width 100%
	max-width 860px
	margin 0 auto
.packet
	border: 2px dotted #296635;
	border-radius: 15px;
	width: 100%;
	max-width: 400px;
	margin 0 auto 25px
	padding 20px
	&-head
		&-title
			text-align: center
			font-family: RO
			font-size: 22px
			text-transform: uppercase
			color  #296635
			small
				text-transform: none
				font-size: 16px
				font-family: AK
				display block
				color #000
	&-body
		padding 10px 0 20px
		text-align: center
		min-height 344px
		&-title
			font-size: 20px
			line-height: 1.3
		&-list
			li
				text-align: left 
				list-style: none
				padding-left: 20px
				background-image url(../img/icons/grass.png)
				background-repeat no-repeat
				background-position: left top 7px
				background-size: 15px
				margin-bottom: 10px
				&:last-child
					margin-bottom: 0
	&-footer
		text-align: center
.more-button
	display: inline-block
	border-bottom: 1px dotted
	margin-bottom: 10px
	color: #666
	cursor pointer
	font-size: 14px
.cost
	font-size: 22px
	margin-bottom: 10px
	span
		display block
		font-family: RO
		font-size: 28px
	&-full
		span
			text-decoration: line-through
	&-sale
		color red
	&-today
		color: green 
		margin-bottom: 20px
.prepayment
	width 100%
	max-width 650px
	margin 0 auto
	text-align: center
.prepaymant-title
	font-size: 32px
	font-family: RO
	color red
.prepayment-text
	display: inline-block
	font-size: 20px
	color #000
	margin 5px 0 15px
.timer-title
	font-size: 32px
	text-align: center
	color #f00
	margin: 30px 0 0
	font-family: RO
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 20px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 22px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 20px
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #4d67ac
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #4d67ac
	text-shadow: 2px 2px 2px rgba(#022a37,.6);