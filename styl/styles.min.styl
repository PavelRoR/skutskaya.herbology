AK = 'Akrobat', sans-serif
RO = 'RussoOne', sans-serif
myGreen = #a8cf48
myDarkGreen = #12281D

@font-face {
	font-family: 'Akrobat';
	src: url('../fonts/Akrobat.eot');
	src: url('../fonts/Akrobat.eot') format('embedded-opentype'),
		 url('../fonts/Akrobat.woff2') format('woff2'),
		 url('../fonts/Akrobat.woff') format('woff'),
		 url('../fonts/Akrobat.ttf') format('truetype'),
		 url('../fonts/Akrobat.svg#Akrobat') format('svg');
	font-display: fallback;
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'RussoOne';
	src: url('../fonts/RussoOne.eot');
	src: url('../fonts/RussoOne.eot') format('embedded-opentype'),
		 url('../fonts/RussoOne.woff2') format('woff2'),
		 url('../fonts/RussoOne.woff') format('woff'),
		 url('../fonts/RussoOne.ttf') format('truetype'),
		 url('../fonts/RussoOne.svg#RussoOne') format('svg');
	font-display: fallback;
	font-weight: bold;
	font-style: normal;
}

@import '../css/_css/bootstrap.min.css'

*
	margin 0
	padding 0
	outline none
body
	font-size: 20px
	font-family: AK
	color #2a251d

a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display: block
	color #000
	border 1px solid #000
	background-color: myGreen
	width: 410px;
	height: 56px;
	line-height: 50px
	text-align: center
	font-size: 24px;
	margin 0 auto
	transition: all .4s ease
	text-decoration: none
	&:focus
		text-decoration: none
		color #000
	&:hover
		text-decoration: none
		color #fff
		background-color: myDarkGreen
.general-title
	text-align: center
	font-size: 30px;
	font-family: RO
	color: rgb(32, 44, 35);
	line-height: 1;
	margin-bottom: 50px
	.span-main
		position relative
		z-index -1
		&:before
			content: ''
			display block
			position: absolute
			width: 56px
			height 56px
			border-radius: 50px
			background-color: myGreen
			top - 10px
			left -30px
			// z-index -1
	.span-green
		color myGreen
	&-light
		color: rgb(239, 239, 239);
		text-shadow: 0px 2px 2.49px rgba(58, 37, 33, 0.5);

