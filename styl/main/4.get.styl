#get
	padding 50px 0
	background-color: #FBFAF8
	background-image url(../img/backgrounds/get_bg.png)
	background-repeat no-repeat
	background-position: center bottom
	background-size: cover
	&-img
		width: 100%
		height 282px
		background-image url(../img/images/get_img.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		margin 0 auto
.get-text
	color #202c23
	width 100%
	max-width 270px
	margin 0 auto 70px
	&:last-of-type
		margin-bottom: 50px
.button-get
	margin-top: -50px