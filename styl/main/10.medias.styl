	.politics_modal-content .modal-title
		font-size: 19px
	.video-wrapper-take-part
		margin-bottom: 30px
	.button-vip
		margin-top: 20px
	.last-subtitle
		margin 20px 0
	.last-container
	.last-container-title
		padding 20px
	.last-container-title
		font-size: 24px
	footer
		font-size: 12px
	.modal-text
		font-size: 22px
	.checking-last .check-label
		line-height: 19px
	#text-revs .carousel-inner .revs-img
		height 100px
@media screen and (max-width 385px)
	#main
