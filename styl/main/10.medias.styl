@media screen and (min-width 2295px)
	.container
		width 1400px
	#main
		padding 300px 0
	.main-title
		font-size: 80px
	.main-subtitle
		font-size: 40px
		max-width 680px
		margin-top: 20px
	.variant
		max-width 610px
	.get-text
		max-width 320px
	#anna
		left 50px
	#text-revs .carousel-inner .revs-img
		height 377px
@media screen and (max-width 1199px)
	#main
		background-position: center top
	#text-revs .carousel-inner .revs-img
		height 256px
@media screen and (max-width 991px)
	header
	footer
		padding 15px 0
	#logo
		float: none
		margin 0 auto 5px
		display block
	.contacts
		float: none
		text-align: center
	.contact
		display: inline-block
		margin 5px 5px 0
		line-height: 17px
	#main
		padding 50px 0
	#anna
		top 0
	.last-container
		padding 40px
	.input-mail-last
		float: none
		margin 0 auto 10px
		display block
	.button-form-last
		float: none
	.form-take-part
		margin-top: 0
	.variant
		margin-bottom: 25px
	#take-part
		padding 50px 0 25px
	#text-revs .carousel-inner .revs-img
		height 194px
@media screen and (max-width 767px)
	#main
		background-position: left top
		text-align: center
	.main-title
		font-size: 50px
	.main-subtitle
		margin 0 auto 40px
	.video-wrapper-take-part
		margin-bottom: 40px
	.for-item
		max-width 100%
		margin-bottom: 30px
	.get-text
		max-width 100%
		margin-bottom: 30px
	.get-text:last-of-type
	.last-container-title
		margin-bottom: 30px
	#get-img
		display none
	#anna
		position static
		width: 320px
		height 320px
		margin:0 auto 25px
	.author-title
		text-align: center
		margin-left: 0
	.author-list
		margin-left: 0
	.form-take-part
		margin-bottom: 40px
	#text-revs .carousel-inner .revs-img
		width 100%
	#text-revs
		margin-bottom: 50px
	.general-title-revs
		margin-top: 40px
@media screen and (max-width 485px)
	#logo
		width 60px
		height 27px
	.contact
		font-size: 12px
		line-height: 15px
		background-size: 15px
		padding-left: 18px
	.contact.contact-email
		padding-left: 26px
	#main
	#for
	#get
	#author
	#last
		padding 40px 0
	#take-part
		padding 40px 0 15px
